# Template designed specifically for viewing (not editing) metadata.

default-width "600"
default-height "500"

editable "false"
prefer-companion "true"
edit-template-fields "false"
edit-mapping "false"

tab {
  name "Image Information"

  # demonstrates how to set up an arbitrarily repeated group
  # this will show information for every Image in the open file

  group {
    name "Image"

    field {
      name "Name"
      type "var"
      valueMap "Image:Name"
    }

    field {
      name "Creation Date"
      type "var"
      valueMap "Image:CreationDate"
    }

    field {
      name "Description"
      type "var"
      valueMap "Image:Description"
    }

    field {
      name "Width"
      type "int"
      valueMap "Image:Pixels:SizeX"
    }
  
    field {
      name "Height"
      type "int"
      valueMap "Image:Pixels:SizeY"
    }
 
    field {
      name "Number of slices"
      type "int"
      valueMap "Image:Pixels:SizeZ"
    }

    field {
      name "Number of channels"
      type "int"
      valueMap "Image:Pixels:SizeC"
    }

    field {
      name "Number of timepoints"
      type "int"
      valueMap "Image:Pixels:SizeT"
    }
  
    field {
      name "Big Endian"
      type "bool"
      default "false"
      valueMap "Image:Pixels:BigEndian"
    }

    field {
      name "Pixel Type"
      type "var"
      valueMap "Image:Pixels:PixelType"
    }
  
    field {
      name "Thumbnail"
      type "thumbnail"
    }
  
  }
}

tab {

  name "Experimenter Information"

  field {
    name "First Name"
    type "var"
    valueMap "CustomAttributes:Experimenter:FirstName"
  }

  field {
    name "Last Name"
    type "var"
    valueMap "CustomAttributes:Experimenter:LastName"
  }

  field {
    name "Email"
    type "var"
    span "1,3" 
    valueMap "CustomAttributes:Experimenter:Email"
  }
}

tab {
  name "Other metadata"

  grid "1,2"

  field {
    nameMap "Image:CustomAttributes:OriginalMetadata:name"
    valueMap "Image:CustomAttributes:OriginalMetadata:value"
    repeated "true" 
    type "var" 
    grid "1,1" 
  }

}
